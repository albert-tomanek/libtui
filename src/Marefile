cc   = "clang"
libs = "-ltermbox"
cflags = "-g"

targets = {
	default = {
		input   = "*.o"
		output  = "test"
		command = "$(cc) $(cflags) -o $(output) $(input) $(libs)"
		
		files = {
			"*.c" = compile_c
		}
	}
}

compile_c = {
	input   = "$(file)"
	output  = "$(patsubst %.c,%.o,$(file))"
	command = "$(cc) $(cflags) -c $(input) -o $(output)"
}
